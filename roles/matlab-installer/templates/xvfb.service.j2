[Unit]
Description=Virtual Framebuffer X Server for MATLAB
Documentation=man:Xvfb(1)
After=network.target

[Service]
Type=simple
User=root
Group=root
ExecStart=/usr/bin/Xvfb :99 -screen 0 1024x768x24 -ac +extension GLX +render -noreset
ExecStop=/usr/bin/pkill -f "Xvfb :99"
Restart=always
RestartSec=5

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/tmp

[Install]
WantedBy=multi-user.target